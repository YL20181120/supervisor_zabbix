                <discovery_rule>
                    <uuid>1e89f03273194674a6e679ec0e22e85e</uuid>
                    <name>ssl_expire_check</name>
                    <key>ssl_expire_discovery[{$SSL_CHECK_HOST}]</key>
                    <delay>15m</delay>
                    <item_prototypes>
                        <item_prototype>
                            <uuid>f95923eb189747e3a5e6ac99341ec404</uuid>
                            <name>Remaining {#SSL_EXPIRE_HOST} Days</name>
                            <type>DEPENDENT</type>
                            <key>remaining_days_[{#SSL_EXPIRE_HOST}]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <parameters>
                                        <parameter>$.[&quot;{#SSL_EXPIRE_HOST}&quot;]</parameter>
                                    </parameters>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>ssl_expire_check[{$SSL_CHECK_HOST}]</key>
                            </master_item>
                            <tags>
                                <tag>
                                    <tag>ssl_expire</tag>
                                    <value>raw</value>
                                </tag>
                                <tag>
                                    <tag>ssl_expire_host</tag>
                                    <value>{#SSL_EXPIRE_HOST}</value>
                                </tag>
                            </tags>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <uuid>681e8de3cd354d4082f713040658e436</uuid>
                                    <expression>last(/SSL Expire Check/remaining_days_[{#SSL_EXPIRE_HOST}])&lt; 0</expression>
                                    <name>Host {#SSL_EXPIRE_HOST} SSL key expired</name>
                                    <priority>DISASTER</priority>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <uuid>4b608d707bb04a2abe68a8b620bf209d</uuid>
                                    <expression>last(/SSL Expire Check/remaining_days_[{#SSL_EXPIRE_HOST}])&lt;=3</expression>
                                    <name>Host {#SSL_EXPIRE_HOST} SSL key expired in 3 days</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#SSL_EXPIRE_HOST}</lld_macro>
                            <path>$.[&quot;{#SSL_EXPIRE_HOST}&quot;]</path>
